{
  "name": "Enhanced Steam",
  "version": "2.8",
  "description": "Enhances the Steam Experience",
  "icons": { "128": "enhancedsteam.png" },
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "storage",	
	"http://www.enhancedsteam.com/"
  ],
  "web_accessible_resources": ["game_area_warning.png", "line_chart.png", "metacritic_bg.png", "enhancedsteam.css"],
  "content_scripts": [
    {
      "matches": ["http://store.steampowered.com/*", "https://store.steampowered.com/*", "http://steamcommunity.com/*"],
      "js": ["jQuery.min.js", "enhancedsteam.js"],
	  "css": ["enhancedsteam.css"]
    }
  ]
}